        "token_url": "/token",
        "token_ttl": 2592000,
        "database": {
            "host":"localhost",
            "port":27017,
            "username":"",
            "password":"",
            "database":"serama",
            "client_collection": "client-store",
            "token_collection": "token-store"
        }
    },
    "caching": {
        "enabled": true,
        "ttl": 300,
        "directory": "./cache/serama/",
        "extension": "json"
    }
